{
    "name": "ecourty/doctrine-export-bundle",
    "type": "symfony-bundle",
    "description": "A Symfony bundle for exporting Doctrine entities to various formats (CSV, JSON, XML)",
    "keywords": ["symfony", "doctrine", "export", "csv", "json", "xml", "bundle"],
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-xmlwriter": "*",
        "symfony/framework-bundle": "^7.0|^8.0",
        "symfony/property-access": "^7.0|^8.0",
        "doctrine/orm": "^3.0|^4.0",
        "doctrine/doctrine-bundle": "^2.18|^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/phpunit-bridge": "^7.0|^8.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.40",
        "symfony/var-exporter": "^7.0|^8.0",
        "symfony/yaml": "^7.0|^8.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ecourty\\DoctrineExportBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ecourty\\DoctrineExportBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --exclude-group=performance",
        "test:all": "phpunit",
        "test:performance": "phpunit --group=performance",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    }
}
